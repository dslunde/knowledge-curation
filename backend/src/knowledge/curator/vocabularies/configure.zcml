<configure
    xmlns="http://namespaces.zope.org/zope"
    i18n_domain="knowledge.curator"
    >

  <!-- Priority vocabulary -->
  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      name="knowledge.curator.priority_vocabulary"
      component=".PriorityVocabularyFactory"
      />

  <!-- Project status vocabulary -->
  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      name="knowledge.curator.project_status_vocabulary"
      component=".ProjectStatusVocabularyFactory"
      />

  <!-- Read status vocabulary -->
  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      name="knowledge.curator.read_status_vocabulary"
      component=".ReadStatusVocabularyFactory"
      />

  <!-- Importance vocabulary -->
  <utility
      provides="zope.schema.interfaces.IVocabularyFactory"
      name="knowledge.curator.importance_vocabulary"
      component=".ImportanceVocabularyFactory"
      />

</configure>
