<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone.app.knowledge"
      metal:use-macro="context/main_template/macros/master">
<body>

<metal:main fill-slot="main">
    <h1 class="documentFirstHeading" tal:content="context/title">Title</h1>
    
    <div class="documentDescription" tal:content="context/description">
        Description
    </div>

    <div id="research-note-metadata" class="metadata-section">
        <div class="field" tal:condition="context/source_url">
            <label i18n:translate="">Source:</label>
            <a tal:attributes="href context/source_url" 
               tal:content="context/source_url"
               target="_blank">Source URL</a>
        </div>
        
        <div class="field" tal:condition="context/tags">
            <label i18n:translate="">Tags:</label>
            <span tal:repeat="tag context/tags">
                <span class="tag" tal:content="tag">Tag</span>
            </span>
        </div>
    </div>

    <div id="research-note-content" 
         tal:condition="context/content"
         tal:content="structure context/content/output">
        Content
    </div>

    <div id="key-insights" tal:condition="view/get_key_insights_formatted">
        <h2 i18n:translate="">Key Insights</h2>
        <ul>
            <li tal:repeat="insight view/get_key_insights_formatted"
                tal:content="insight">Insight</li>
        </ul>
    </div>

    <div id="connections" tal:condition="view/get_connections">
        <h2 i18n:translate="">Related Content</h2>
        <ul>
            <li tal:repeat="item view/get_connections">
                <a tal:attributes="href item/getURL"
                   tal:content="item/Title">Connected Item</a>
            </li>
        </ul>
    </div>

</metal:main>

</body>
</html>